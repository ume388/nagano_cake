<div class="container">
  <h1>注文履歴詳細</h1>
  
  <div>
    <table class="table">
      <tbody>
        <tr>
          <td>購入者</td>
          <td>
            <%= @order.customer.last_name %>
            <%= @order.customer.first_name %>
          </td>
        </tr>
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime("%Y-%m-%d") %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td>
            〒<%= @order.postal_code %>
            <%= @order.address %>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td><%= @order.payment_method %></td>
        </tr>
      </tbody>
    </table>
  </div>
    
  <div class="row">
    <div class="col-lg-8">  
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込み）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
      
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= (order_detail.price * 1.08).floor %></td>
              <td><%= order_detail.amount %></td>
              <td><%= (order_detail.price * 1.08).floor * order_detail.amount %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="col-lg-4">  
      <table>
        <tbody>
          <tr>
            <td>商品合計</td>
            <td>あとで直す</td>
          </tr>
          <tr>
            <td>送料</td>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <td>請求金額合計</td>
            <td><%= @order.total_payment %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>