<div>
    <h1>注文履歴</h1>

    <table>
        <thead>
            <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
            </tr>
        </thead>
    
        <tbody>
            <% @orders.each do |order| %>
                <tr>
                    <td><%= order.created_at %></td>
                    <td><%= order.customer.last_name + " " + order.customer.first_name %></td>
                    <td>
                        <%= order.order_details.count %>
                    </td>
                    <td></td>
                </tr>
                <% end %>
        </tbody>
    </table>
</div>