<div class="container">
  <h1><%= @customer.last_name + " " + @customer.first_name %>さんの会員情報編集</h1>
  
  <%= form_for(@customer, url: admin_customer_path) do |f| %>

  <table class="table">
    <tr>
      <th><%= f.label :会員ID %></th>
      <td><%= @customer.id %></td>
    </tr>

    <tr>
      <th><%= f.label :氏名 %></th>
      <td>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </td>
    </tr>

    <tr>
      <th><%= f.label :フリガナ %></th>
      <td>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </td>
    </tr>

    <tr>
      <th><%= f.label :郵便番号 %></th>
      <td><%= f.text_field :postal_code %></td>
    </tr>

    <tr>
      <th><%= f.label :住所 %></th>
      <td><%= f.text_field :address %></td>
    </tr>

    <tr>
      <th><%= f.label :電話番号 %></th>
      <td><%= f.text_field :telephone_number %></td>
    </tr>

    <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.text_field :email %></td>
    </tr>

    <tr>
      <th><%= f.label :会員ステータス %></th>
      <td><%= f.select :is_deleted, [["有効","false"], ["退会","true"]] %></td>
    </tr>
  </table>


  <div class="text-center">
    <%= f.submit "変更を保存" %>
  </div>
  <% end %>
</div>