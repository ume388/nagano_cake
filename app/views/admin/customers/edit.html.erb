<div>
  <h1><%= @customer.last_name + " " + @customer.first_name %>さんの会員情報編集</h1>
  
  <%= form_for(@customer, url: admin_customer_path) do |f| %>

  <table>
    <tr>
      <th><%= f.label :会員ID %></th>
      <td><%= @customer.id %></td>
    </tr>

    <tr>
      <th><%= f.label :氏名 %></th>
      <td><%= f.text_field :last_name %><br>
          <%= f.text_field :first_name %>
      </td>
    </tr>

    <tr>
      <th><%= f.label :フリガナ %></th>
      <td><%= f.text_field :last_name_kana %><br>
      <%= f.text_field :first_name_kana %>
      </td>
    </tr>

    <tr>
      <th><%= f.label :郵便番号 %></th>
      <td><%= f.text_field :postal_code %></td>
    </tr>

    <tr>
      <th><%= f.label :住所 %></th>
      <td><%= f.text_field :address %></td>
    </tr>

    <tr>
      <th><%= f.label :電話番号 %></th>
      <td><%= f.text_field :telephone_number %></td>
    </tr>

    <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.text_field :email %></td>
    </tr>

    <tr>
      <th><%= f.label :会員ステータス %></th>
      <td><%= f.select :is_deleted, [["有効会員","false"], ["退会済み","true"]] %></td>
    </tr>
  </table>


      <div>
        <%= f.submit "変更を保存" %>
      </div>
  <% end %>
</div>