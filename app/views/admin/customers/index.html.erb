<div class="container">
  <h1>会員一覧</h1>
  
  <!--すべての会員情報の呼び出し-->
  <table class="table table-hover">
        <thead>
            <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
            </tr>
        </thead>
    
        <tbody>
            <% @customers.each do |customer| %>
                <tr>
                    <td><%= customer.id %></td>
                    <td><%= link_to customer.last_name + " " + customer.first_name, admin_customer_path(customer) %></td>
                    <td><%= customer.email %></td>
                    <td>
                      <!--退会ステータスの-->
                      <% if customer.is_deleted == false %>
                          有効
                      <% else %>
                          退会
                      <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
  
</div>