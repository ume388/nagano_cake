<div>
  <h1>商品詳細</h1>
  
  <div>
    <%= attachment_image_tag @item, :image, :fill, 300, 300, fallback: 'no_image.jpg'%>
  </div>
  
  <div>
    <table>
      <tbody>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>税込価格（税抜価格）</td>
          <td><%= @item.price %></td>
        </tr>
      </tbody>
    </table>
    
    <div>
      <%= link_to "編集する", edit_admin_item_path(@item) %>
    </div>
  </div>
  
</div>