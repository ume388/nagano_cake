<div class="container">
  <h1>商品編集</h1>
  
  <%= form_with model:@item, url: admin_item_path, local:true do |f| %>
    <div>商品画像</div>
    <%= f.attachment_field :image %>
    
    <div>商品名</div>
    <%= f.text_field :name %>
    
    <div>商品説明</div>
    <%= f.text_area :introduction %>
    
    <div>税抜価格</div>
    <%= f.text_field :price %><br>
    
    <%= f.submit "変更を保存" %>
    
  <% end %>
</div>