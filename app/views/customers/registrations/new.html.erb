<div class="container">
  <h2>新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <div class="field">
      <label class>名前</label><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: ":last_name", placeholder: "(姓)" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: ":first_name" ,placeholder: "(名)" %>
    </div>

    <div class="field">
      <label class>フリガナ</label><br />
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete:":last_name_kana" ,placeholder: "(セイ)" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: ":first_name_kana" ,placeholder: "(メイ)" %>
    </div>

    <div class="field">
      <label class>郵便番号（ハイフンなし）</label><br />
      <%= f.text_field :postal_code, autofocus: true, autocomplete: ":postal_code" %>
    </div>

    <div class="field">
      <label class>住所</label><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>
  
    <div class="field">
      <label class>電話番号（ハイフンなし）</label><br />
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: ":telephone_number" %>
    </div>

    <div class="field">
      <label>メールアドレス</label><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <label>パスワード（6文字以上）</label>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <label>パスワード（確認用）</label><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>

  <h4>既に登録済みの方</h4>
  <%= link_to "こちら", new_customer_session_path %>からログインしてください。
</div>