<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3">
            <%= link_to image_tag("nagano_cake.logo.png"), root_path %>
          </a>
        
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <!--会員がログインしている場合-->
              <% if customer_signed_in? %>
                <li class="nav-item">
                  ようこそ、<%= current_customer.last_name + current_customer.first_name %>さん！
                </li>
                <li class="nav-item">
                  <%= link_to "マイページ", customers_my_page_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "商品一覧", items_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "カート", cart_items_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
                </li>
    
              <!--管理者がログインしている場合-->
              <% elsif admin_signed_in? %>
                <li>
                  <%= link_to "商品一覧", admin_items_path %>
                </li>
                <li>
                  <%= link_to "会員一覧", admin_customers_path %>
                </li>
                <li>
                  <%= link_to "注文履歴", admin_root_path %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
                </li>
    
              <!--会員、管理者以外の場合-->
              <% else %>
                <li class="nav-item">
                  <%= link_to "About", about_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "商品一覧", items_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "新規登録", new_customer_registration_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログイン", new_customer_session_path %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
