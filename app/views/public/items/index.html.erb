<div>
  <h1>商品一覧（全<%= @items.count %>件）</h1>
  
  <div>
    <% @items.each do |item| %>
      <%= link_to item_path(item.id) %>
      <&= attachment_image_tag item, :image, :fill, 200, 150, format: 'jpag', fallback: "no_image.jpg" %>
      <%= item.name %>
      ￥<%= item.price %>
  </div>
  <% end %>
</div>
