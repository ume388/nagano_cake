<div>
  <h1>商品一覧（全<%= @items.count %>件）</h1>
  
  <div>
    <% @items.each do |item| %>
      <%= link_to (attachment_image_tag item, :image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg"), item_path(item.id) %><br>
      <%= item.name %><br>
      ￥<%= item.price.round %><br>
    <% end %>
  </div>
</div>
