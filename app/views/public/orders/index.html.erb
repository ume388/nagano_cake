<div>
  <h1>注文履歴一覧</h1>
  
  <table>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </tr>
    
    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= order.created_at %>
      </td>
      <td>
        <%= order.postal_code %>
        <%= order.address %>
        <%= order.name %>
      </td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
    <% end %>
  </table>
</div>